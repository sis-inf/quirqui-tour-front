</Layout>

<style>
	/* Estilo global */
	html, body {
		height: 100%;
		margin: 0;
		overflow-x: hidden;
	}
	
	body {
		background-image: url('fondoAcercaDe.jpg');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		background-attachment: fixed;
		color: #333;
		font-family: 'Akshar Light', sans-serif;
		display: flex;
		flex-direction: column;
		align-items: center;
		min-height: 100vh;
	}

	main {
		padding: 20px;
	}

	.titulo-principal {
		background-image: url('fondoTituloAcercaDe.jpg'); 
		background-size: cover; 
		background-position: center;
		padding: 30px 20px;
		display: flex; 
		align-items: center; 
		justify-content: center; 
		gap: 20px; 
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3); 
		border-radius: 10px; 
		text-align: center;
	}

	.titulo-principal img {
		width: 150px; 
		height: auto;
	}

	.titulo-principal h1 {
		font-size: 2.5em;
		margin: 0;
		font-weight: bold;
		text-transform: uppercase;
		letter-spacing: 2px; 
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5); 
		color: #FFFFFF; 
	}


	.quienes-somos {
		background-color: rgba(239, 231, 231, 0.7);
		border-radius: 10px;
		padding: 20px;
		margin-bottom: 40px;
	}
	
	.quienes-somos h1 {
		text-align: center;
		font-size: 3em;
		color: #8B4513;
	}
	
	.quienes-somos h2 {
		color: #5A3E1A;
		margin-top: 20px;
	}

	.equipo-trabajo {
		text-align: center; 
		padding: 20px 20px;
		margin-bottom: 40px;
		width: 100%;
		border-radius: 10px;
	}
	
	.equipo-trabajo h2 {
		font-size: 3em;
		color: #8B4513;
		margin-bottom: 30px;
		text-transform: uppercase;
		font-weight: bold;
		text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
	}
	
	.miembros {
		display: grid;
		grid-template-columns: repeat(5, 1fr); 
		gap: 20px; 
		justify-content: center; 
		align-items: center; 
		padding: 20px;
	}
	
	.miembro {
		text-align: center;
		width: 100%;
		margin-bottom: 30px;
		border-radius: 10px;
		padding: 20px;
	}
	
	.miembro img {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		border: 3px solid #8B4513;
		margin-bottom: 15px;
	}
	
	.miembro p {
		font-size: 1.2em;
		color: #335669;
		margin: 5px 0;
	}
	</style>
	
