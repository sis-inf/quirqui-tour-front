---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import PiePagina from '../components/piePagina.astro';
import Encabezado from '../components/encabezado.astro';
---
<Layout title="Informacion-Turistica">
    <Encabezado />
	<main>
		<div class="header">
      <h1>Los Principales Destinos de Oruro</h1>
      <div class="busqueda">
        <input type="text" placeholder="INGRESE DESTINO PARA BUSCAR">
        <button>BUSCAR</button>
      </div>
    </div>

    <div class="carrusel">
			<div class="carrusel-imagen">
				<a href="/destinos"> 
					<img src="/oruroFoto.jpg" alt="Destino turistico" style="width: 50%; height: auto;" />
					<div class="info">
						<p>Nombre: Casco</p>
						<p>Ubicación: Oruro</p>
					</div>
				</a>
		</div>

			<div class="carrusel-imagen">
				<a href="/destinos">
					<img src="/oruroFoto.jpg" alt="Destino turistico" style="width: 50%; height: auto;" />
					<div class="info">
						<p>Nombre: Oruro</p>
						<p>Ubicación: Oruro</p>
					</div>
				</a>
			</div>

			<div class="carrusel-imagen">
				<a href="/destinos">
					<img src="/oruroFoto.jpg" alt="Destino turistico" style="width: 50%; height: auto;" />
					<div class="info">
						<p>Nombre: Casco</p>
						<p>Ubicación: Oruro</p>
					</div>
				</a>
			</div>

			<!-- Botones para navegar -->
			<button class="prev" onclick="cambiarSlide(-1)">&#10094;</button>
			<button class="next" onclick="cambiarSlide(1)">&#10095;</button>
		</div>

    <div class="filtros-anuncio">
      <div class="filtros">
        <label for="filtro-turistico">Filtrar sitios turísticos:</label>
        <select id="filtro-turistico">
          <option value="caminata">Caminata</option>
          <option value="comida">Comida</option>
          <option value="etc">etc.</option>
        </select>
      </div>
    
      <div class="anuncio">
        <a href="/infTuristica">
          <img src="/anuncio.jpg" alt="Anuncio" />
        </a>
      </div>
    </div>    
    </main>
	<PiePagina />  
</Layout>

<style>
	:root {
		--color-marron-tierra: #8B4513;
		--color-crema: #F6ECDE;
		--color-verde-musgo: #556B2F;
		--color-rojo-arcilla: #A52A2A;
		--color-azul-profundo: #335669;
	  }
	  
	  body {
		background-color: var(--color-crema);
		font-family: 'Akshar Light', sans-serif;
		margin: 0;
		padding: 0;
	  }
	  main {
		background-color: var(--color-crema);
	}
	
	  
	  /* Contenedor del título y la barra de búsqueda */
	  .header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		max-width: 1200px; /* Ancho total más compacto */
		margin: 0 auto;
		padding: 20px;
		gap: 20px;
	  }
	  
	  h1 {
		color: var(--color-marron-tierra);
		font-family: 'Poppins', sans-serif;
		font-size: 40px; /* Tamaño reducido si es necesario para mejor alineación */
		margin: 0;
		padding: 0;
		line-height: 1.2;
	  }
	  
	  /* Barra de búsqueda al lado del título */
	  .busqueda {
		display: flex;
		align-items: center;
		gap: 15px;
		width: auto; /* Ajuste para que no ocupe el 80% */
		max-width: none;
	  }
	  
	  .busqueda input[type="text"] {
		padding: 10px;
		font-size: 18px;
		border: 1px solid var(--color-marron-tierra);
		border-radius: 4px;
		width: 350px; /* Ancho más compacto para la barra de búsqueda */
		box-sizing: border-box;
	  }
	  
	  .busqueda button {
		background-color: var(--color-verde-musgo);
		color: var(--color-crema);
		padding: 10px 15px;
		font-size: 18px;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		transition: background-color 0.3s;
	  }
	  
	  
	  .carrusel {
		display: flex;
		align-items: center;
		gap: 20px;
		margin: 20px auto;
	}
	
	.carrusel-imagen {
		width: 500px; /* Ajusta el tamaño deseado */
		height: 400px;
	}
	
	.carrusel-imagen img {
		width: 100%;
		height: 100%;
		object-fit: cover; /* Asegura que la imagen cubra el contenedor sin distorsión */
		border-radius: 8px;
	}
	
	/* Orden específico para las imágenes */
	.carrusel-imagen:nth-child(1) {
		order: 1;
	}
	
	.carrusel-imagen:nth-child(2) {
		order: 2;
	}
	
	.carrusel-imagen:nth-child(3) {
		order: 3;
	}
	
	
	  .info {
		text-align: center;
	  }
	  
	  .info p {
		color: var(--color-azul-profundo);
		font-size: 18px;
	  }
	  
	  /* Estilos para alinear filtros y anuncio */
	.filtros-anuncio {
		display: flex;
		align-items: flex-start;
		justify-content: space-between;
		margin: 0 auto;
		gap: 20px;
		max-width: 1200px;
		position: relative;
		top: -100px; /* Subir toda la sección unos 100px (aproximadamente 12 cm) */
	}
	
	/* Estilos para la sección de filtros */
	.filtros {
		flex: 1;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 10px;
		padding-top: 0; /* Eliminar padding superior para subir más */
	}
	
	.filtros label,
	.filtros select {
		font-size: 18px;
		color: var(--color-marron-tierra);
	}
	
	/* Estilos para el anuncio */
	.anuncio {
		flex: 2;
		display: flex;
		justify-content: center;
	}
	
	.anuncio img {
		width: 100%;
		max-width: 600px;
		height: auto;
		border-radius: 8px;
	}
	
	  
	  /* Botones de navegación */
	  .prev, .next {
		font-size: 30px;          /* Corrige font-size */
		color: #556B2F;              /* Color verde musgo */
		cursor: pointer;
		position: absolute;       /* Posición absoluta para ubicar en los bordes */
		top: 50%;                 /* Centra verticalmente */
		transform: translateY(-50%); /* Ajuste para centrar con precisión */
		padding: 10px;            /* Espacio alrededor de la flecha */
		z-index: 10;              /* Asegura que esté por encima de otros elementos */
	}
	
	.prev {
		left: 10px;               /* Coloca la flecha izquierda en el borde izquierdo */
	}
	
	.next {
		right: 10px;              /* Coloca la flecha derecha en el borde derecho */
	}
	
	  
	  /* Estilos responsivos */
	  /* celulares */
  @media (max-width: 768px) {
    .contenedor {
      width: 90%; 
      margin: auto; 
    }

    .contenido {
      display: flex; 
      flex-direction: column; 
      align-items: center; 
      justify-content: center; 
      gap: 20px; 
    }

    .contenedor-formulario h2 {
      text-align: center; 
      margin-bottom: 20px; 
    }

    .contenedor-formulario {
      display: flex;
      flex-direction: column; 
      align-items: center; 
      width: 100%; 
    }

    .formulario-transporte {
      max-width: 100%; 
      box-sizing: border-box; 
    }

    .buses-logo {
      display: none; /* oculta el logo en pantallas de celulares */
    }
  }

  .contenedor-boton {
    margin-bottom: 20px; 
  }

  /* tablets */
  @media (max-width: 1024px) {
    .contenedor {
      width: 90%;
      margin-bottom: 0; 
      padding: 20px; 
    }
    .contenedor-formulario {
      display: flex;
      flex-direction: column; 
      align-items: center; 
    }

    .contenedor-formulario h2 {
      text-align: center; 
      margin-bottom: 10px;
    }

    .formulario-transporte {
      margin-top: 10px; 
      max-width: 100%; 
    }
  }
	  
	</style>