---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import PiePagina from "../components/piePagina.astro";
import Encabezado from "../components/encabezado.astro";
---

<Layout title="Buses_y_Transporte">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <Encabezado />
  <main>
    <h1>BUSES Y TRANSPORTES</h1>
    <div class="contenedor">
      <div class="contenido">
        <!-- Formulario -->
        <section class="contenedor-formulario">
          <h2>Buscar Buses</h2>
          <form class="formulario-transporte" action="/buscar" method="GET"><!--/pagina-en-blanco aqui colocar la ruta para la pagina en blanco -->
            <div class="grupo-formulario">
              <div class="campo-formulario">
                <label for="origen">Origen</label>
                <input
                  type="text"
                  id="origen"
                  name="origen"
                  placeholder="Oruro"
                  readonly
                  required
                />
              </div>
              <div class="campo-formulario">
                <label for="destino">Destino</label>
                <input
                  type="text"
                  id="destino"
                  name="destino"
                  placeholder="Destino"
                  required
                />
              </div>
            </div>

            <div class="grupo-formulario">
              <div class="campo-formulario">
                <label for="hora">Hora de Salida:</label>
                <input
                  type="time"
                  id="hora"
                  name="hora"
                  required
                />
              </div>
            </div>

            <div class="boton-formulario">
              <button type="submit">Buscar <i class="fa-solid fa-search"></i></button>
            </div>
          </form>
        </section>

        <!-- Logo o anuncio -->
        <figure class="buses-logo">
          <img src="QUIRQUI_revuelto.png" alt="Descripción de la imagen" />
        </figure>
      </div>

      <!-- Listar Empresas -->
      <section class="contenedor-boton">
        <a href="#Listar" class="boton-listar">Listar Empresas</a>
      </section>
      <div class="lista">
        <h1>LISTADO DE EMPRESAS</h1>
      </div>
      <section class="Listar" id="Listar">
        <form action="/buscar" method="GET">
          <div class="card"> 
              <div class="fotobus">
                <img src="public/buss.png" alt="Imagen del bus"/>  
              </div> 
              <div class="info"> 
                <div class="nombre_emp">NOMBRE</div> 
                <br>
                <br>
                <div class="cel_emp">Info: +591 999999</div> 
              </div> 
            <button class="boton_inf"> + INFORMACIÓN</button> 
          </div>
        </form>
        <figure class="infbuslogo">
            <img src="QUIRQUI_info_bus.png" alt="Descripción de la imagen" />
        </figure>
        </div>
      </section>
    </div>
  </main>
  <PiePagina />
</Layout>

<style>
  main {
    background-color: #f6ecde; 
  }
  body{
    background-color: #f6ecde; 
  }
  html { 
    scroll-behavior: smooth;
  }
  h1{
    color: #A52A2A;
  }
  h2{
    color: #634822;
  }
  label{
    color: #FBF8F3;
  }
  .contenedor {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 1000px;
    gap: 7px;
    margin: 0 auto;
  }
  .contenido {
    display: flex;
    justify-content: space-between;
    width: 100%;
    gap: 40px;
  }

  /* formulario */
  .formulario-transporte {
    background-color: #335669;
    padding: 20px;
    border: 2px solid #233b47;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(255, 255, 255, 0.1);
    max-width: 600px;
    width: 100%;
  }

  .grupo-formulario {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .campo-formulario {
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-right: 20px;
  }

  .campo-formulario:last-child {
    margin-right: 0;
  }

  .formulario-transporte label {
    margin-bottom: 8px;
    font-weight: bold;
  }

  .formulario-transporte input {
    background-color: #f6ecde;
    padding: 10px;
    font-size: 1rem;
    border: 1px solid #f6ecde;
    border-radius: 4px;
    width: 100%;
    box-sizing: border-box;
  }

  .formulario-transporte input:focus {
    outline: none;
    border-color: #f6c496;
  }

  /* Botón del formulario */
  .boton-formulario {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }
  .formulario-transporte button {
    padding: 10px 20px;
    background-color: #A52A2A	;
    color: #f6ecde;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .formulario-transporte button:hover {
    transform: translateY(-2px); 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); 
  }

  /*logo */
  .buses-logo {
    flex: 0.7;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .buses-logo img {
    max-width: 350px;
    height: auto;
    border-radius: 8px;
  }

  .contenedor-boton {
    display: flex;
    align-items: flex-start;
    text-align: left;
    width: 100%;
  }
  .boton-listar {
    padding: 10px 20px;
    background-color: #A52A2A	;
    color: #f6ecde;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none; 
  }
  .boton-listar:hover { 
    transform: translateY(-2px); 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }
  /* Listado de Empresas */
  .lista{
    padding: 20px;
    margin-top: 20px;
  }
  .Listar { 
    display: flex; 
    align-items: flex-start; 
   }
  .card { 
    display: flex; 
    align-items: center; 
    background-color: #f7e5c8; 
    border-bottom: 4px solid #A52A2A;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px; 
    border-radius: 10px; 
    width: 550px; 
    font-family: Arial, sans-serif; 
    flex-grow: 1;
  } 
  .card .fotobus{ 
    width: 120px; 
    height: 120px; 
    background-color: #ebbc6b; 
    border-radius: 5px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    font-size: 12px; 
    font-weight: bold; 
  } 
	.fotobus img{
		width: 100%; 
		height: 100%; 
		object-fit: cover;	
	}
  .card .info { 
    flex-grow: 1; 
    margin-left: 20px; 
    align-items: center; 
    justify-content: center;
  } 
  .card .info .nombre_emp { 
    font-size: 18px; 
    margin-top: 10px;
    font-weight: bold; 
    color: #335669;
    
  } 
  .card .info .cel_emp { 
    font-size: 16px; 
    margin-bottom: 10px;
    margin-top: 5px; 
    color: #566B30;
  }
  .boton_inf {
    padding: 10px 20px;
    background-color: #A52A2A	;
    color: #f6ecde;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none; 
  }
  .boton_inf:hover { 
    transform: translateY(-2px); 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  }
  .infbuslogo{
    background-color:#f6ecde;
    padding: auto;
    flex: 0.7;
    display: flex;
    align-items: center;
    margin-left: 20px;
  }
  .infbuslogo img {
    max-width: 350px;
    height: auto;
    border-radius: 8px;
  }
  /* celulares */
  @media (max-width: 768px) {
    .contenedor {
      width: 90%; 
      margin: auto; 
    }

    .contenido {
      display: flex; 
      flex-direction: column; 
      align-items: center; 
      justify-content: center; 
      gap: 20px; 
    }

    .contenedor-formulario h2 {
      text-align: center; 
      margin-bottom: 20px; 
    }

    .contenedor-formulario {
      display: flex;
      flex-direction: column; 
      align-items: center; 
      width: 100%; 
    }

    .formulario-transporte {
      max-width: 100%; 
      box-sizing: border-box; 
    }
    .Listar{
      flex-direction: column;
      align-items: center;
      width: 75%;
    }
    .card{
      display: flex;
      flex-direction: column; 
      align-items: center; 
      width: 100%;
    }
    .buses-logo {
      display: none; /* oculta el logo en pantallas de celulares */
    }
    .infbuslogo {
      display: none; /* oculta el logo en pantallas de celulares */
    }
  }
  .contenedor-boton {
    margin-bottom: 20px; 
  }
 
  /* tablets */
  @media (max-width: 1024px) {
    .contenedor {
      width: 90%;
      margin-bottom: 0; 
      padding: 20px; 
    }
    .contenedor-formulario {
      display: flex;
      flex-direction: column; 
      align-items: center; 
    }

    .contenedor-formulario h2 {
      text-align: center; 
      margin-bottom: 10px;
    }

    .formulario-transporte {
      margin-top: 10px; 
      max-width: 100%; 
    }
    .Listar{
      flex-direction: column;
      align-items: center;
    }
    .card{
      display: flex;
      flex-direction: column; 
      align-items: center; 
      width: 100%;
    }
  }
</style>