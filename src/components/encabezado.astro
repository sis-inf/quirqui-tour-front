	/*variable globales*/
	:root {
		--color-primario: #8b4513;
		--color-secundario: #f5ecdd;
		--negro: #000000;
		--blanco: #0c0c0c;
		--letras: #556b2f;
		--font-Akshar: "Akshar", serif;
		--font-Roboto: "Roboto", serif;
	}
	/*OJO*/
	html,
	body {
		height: 100%;
		margin: 0;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	} /*SOLO DEMOSTRACIÓN*/

	/*stylos de la navegacion principal*/

	/*header*/
	.navegacion {
		width: 100%;
		height: 180px;
		position: fixed;
	}
	.contenedor-logo {
		background-color: var(--color-primario);
	}
	.seccion {
		width: 100%;
		height: 100%;
	}

	.navbar {
		width: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		font-family: var(--font-Akshar);
		text-align: center;
		background-color: var(--color-secundario);
		height: 55px;
	}

	.logo {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo img {
		width: 120px; /* Tamaño del logo */
		height: auto;
		margin-right: 0;
	}

	.nav-links {
		list-style: none;
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		width: 100%;
		height: 40px;
		padding: 0;
	}

	.nav-links li {
		display: inline-block;
		padding: 0 20px;
	}

	.nav-links a {
		text-decoration: none;
		color: var(--letras);
		font-size: 20px;
		font-weight: 600;
		text-transform: uppercase;
	}

	.nav-links a:hover {
		text-decoration: underline;
		color: var(--negro);
	}
	.menu,
	input {
		display: none;
	}

.nav-links a.active {
    background-color: rgba(186, 147, 116, 0.7); /* Fondo claro */
    color: var(--negro); /* Letra negra */
    padding: 1px 20px;
    border-radius: 5px;
    font-weight: bold;
    text-decoration: none;
	display: inline-block; /* Asegura que solo ocupe el espacio necesario */
}

	/* Estilos para el menú desplegable de Carnaval */
.dropdown {
    position: relative;
}

.dropdown-menu {
    display: none; /* Oculto por defecto */
    position: absolute;
    top: 100%;
    left: 0;
    background-color: rgba(186, 147, 116, 0.7);
    padding: 10px 0;
    border-radius: 5px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 10;
	width: 160px;
}

.dropdown-menu li {
    padding: 5px 20px;
}

.dropdown-menu li a {
    color: #6f4428;
    text-decoration: none;
    font-size: 18px;
    display: block;
	padding: 5px 20px;
}

.dropdown-menu li a:hover {
    background-color: #b8a08e;
    color: #fff;
}

/* Mostrar el menú desplegable al pasar el mouse */
.dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-submenu .dropdown-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    background-color: rgba(186, 147, 116, 0.7);
    position: absolute;
    left: 100%;
    top: 0;
	width: 160px;
}

.dropdown-submenu .dropdown-menu li a {
    color: #6f4428;
    text-decoration: none;
    padding: 5px 15px;
    display: block;
}

.dropdown-submenu .dropdown-menu li a:hover {
    background-color: #b8a08e;
    color: #fff;
}

	@media screen and (max-width: 768px) {
		.nav-links {
			position: absolute;
			flex-direction: column;
			align-items: center;
			gap: 10px;
			top: 40px;
			background: rgba(199, 177, 177, 0.65);
			width: 100%;
			right: 0;
			padding: 0px 0px;
			overflow: hidden;
			transition: 500ms;
			height: 0;
		}
		input:checked ~ .nav-links {
			height: 600%;
		}
		.menu {
			display: block;
			width: 24px;
		}
		.menu label {
			width: 24px;
			height: 24px;
			position: absolute;
			cursor: pointer;
		}
		.x-icon {
			display: none;
		}
		input:checked ~ .menu .line-icon {
			display: none;
		}
		input:checked ~ .menu .x-icon {
			display: block;
		}
	}
	@media screen and (max-width: 920px) {
		.nav-links li {
			display: inline-block;
			padding: 0 10px;
		}
	}

	/* Deslizamiento en responsive */
    @media screen and (max-width: 768px) {
    #carnaval-submenu {
        max-height: 100px; /* Ajusta la altura máxima para que se deslice */
        overflow-y: auto;  /* Activa el deslizamiento vertical */
		overflow-x: hidden; /* para evitar desplazamiento horizontal */
    }
}
@media screen and (max-width: 768px) {
    /* Ajustar el segundo submenú para que se muestre debajo del primero en pantallas pequeñas */
    .dropdown-submenu .dropdown-menu {
        position: static; /* Cambia la posición para que se apile debajo */
        margin-top: 10px; /* Agrega un pequeño margen superior si es necesario */
        left: auto; /* Anula la posición izquierda */
        top: auto; /* Anula la posición superior */
    }
}
@media screen and (max-width: 768px) {
    /* Alineación del segundo submenú */
    .dropdown-submenu .dropdown-menu {
        position: relative;
        margin-top: 0;
        left: -11px;
        top: 0;
        width: 100%;
        padding: 0; /* Elimina cualquier espacio adicional */
    }

    /* Estilo para unir ambos submenús visualmente */
    .dropdown-menu,
    .dropdown-submenu .dropdown-menu {
        border: none;
        box-shadow: none;
        background-color: rgba(186, 147, 116, 0.7);
        text-align: left; /* Alinea el texto y botones a la izquierda */
    }

    /* Ajuste de los elementos del menú */
    .dropdown-menu li,
    .dropdown-submenu .dropdown-menu li {
        padding: 0 15px; /* Ajusta el espaciado de los elementos */
        margin: 0; /* Elimina cualquier margen adicional */
    }

    /* Ajuste del botón "Ver Más" */
    .dropdown-menu .ver-mas,
    .dropdown-submenu .ver-mas {
        width: 100%; /* Asegura que ocupe todo el ancho disponible */
        padding-left: 10px 15px; /* Ajusta la alineación hacia la izquierda */
